# ============================================
# Unified VoiceForge + Krya Environment Configuration
# Copy this file to .env and update values
# ============================================

# ============================================
# NETWORK CONFIGURATION
# ============================================
# IP address of the Linux VM (where docker runs)
HOST_IP=192.168.1.100

# IP address of the Windows PC with RTX 5090
WINDOWS_GPU_HOST=192.168.1.200

# ============================================
# SHARED DATABASE (PostgreSQL)
# ============================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=your-secure-password-here

# ============================================
# SHARED STORAGE (MinIO)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password

# ============================================
# VOICEFORGE CONFIGURATION
# ============================================
VOICEFORGE_SECRET_KEY=your-voiceforge-secret-key-here

# API Keys (optional - for personal use, leave blank)
VOICEFORGE_STRIPE_KEY=
VOICEFORGE_SENTRY_DSN=

# ============================================
# KRYA CONFIGURATION
# ============================================
KRYA_NEXTAUTH_SECRET=your-krya-nextauth-secret-here

# AI Provider Configuration (for cloud fallback)
# Leave blank to use local GPU only
FAL_KEY=
REPLICATE_API_TOKEN=
TOGETHER_API_KEY=
GOOGLE_AI_API_KEY=

# ============================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================
# Only needed if you want cloud LLM fallback
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Hugging Face token (for downloading some models)
HF_TOKEN=

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Set to 'development' for hot reload
NODE_ENV=production
ENVIRONMENT=production
DEBUG=false

# ============================================
# SSL/TLS (for production with nginx)
# ============================================
# Set to your domain if using HTTPS
DOMAIN=localhost
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem
