# ===========================================
# Krya Distributed Setup - Environment Variables
# ===========================================
# Copy this to .env and configure for your network
# ===========================================

# ===========================================
# GPU Worker Configuration (REQUIRED)
# ===========================================
# Replace with your Windows PC's IP address
GPU_WORKER_IP=192.168.1.100

# ComfyUI (Image/Video Generation)
COMFYUI_URL=http://${GPU_WORKER_IP}:8188
COMFYUI_OUTPUT_URL=http://${GPU_WORKER_IP}:8188/view

# Ollama (LLM for Prompt Enhancement)
OLLAMA_URL=http://${GPU_WORKER_IP}:11434

# ===========================================
# Database
# ===========================================
POSTGRES_USER=krya
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=krya
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ===========================================
# Authentication
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here

# NextAuth URL (your Linux VM's address)
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# Storage (MinIO)
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_this_secure_password
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=${MINIO_ROOT_USER}
S3_SECRET_KEY=${MINIO_ROOT_PASSWORD}
S3_BUCKET=krya-uploads

# ===========================================
# Cloud Providers (Optional - for fallback)
# ===========================================
# These are optional if you're using local GPU
# But useful as fallbacks or for specific features

# fal.ai - Fast cloud inference
FAL_KEY=

# Replicate
REPLICATE_API_TOKEN=

# Google AI (Imagen 4, Veo 3.1)
GOOGLE_AI_API_KEY=

# ===========================================
# Monitoring (Optional)
# ===========================================
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ===========================================
# Default Provider Mode
# ===========================================
# Set to 'local' to use GPU worker by default
DEFAULT_PROVIDER_MODE=local
DEFAULT_IMAGE_PROVIDER=comfyui
DEFAULT_LLM_PROVIDER=ollama
