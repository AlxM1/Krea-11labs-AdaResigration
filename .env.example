# ===========================================
# KRYA - AI Creative Platform Configuration
# ===========================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/krya"

# Redis (for caching and queues)
REDIS_URL="redis://localhost:6379"

# ===========================================
# Authentication (NextAuth.js / Auth.js)
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
AUTH_SECRET="generate-a-secure-secret-with-openssl-rand-base64-32"

# OAuth Providers
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ===========================================
# AI Providers - Cloud (at least one required for cloud mode)
# ===========================================
# fal.ai - Fast image/video generation
FAL_KEY=""

# Replicate - Model hosting platform
REPLICATE_API_TOKEN=""

# Together AI - Open source models
TOGETHER_API_KEY=""

# OpenAI - GPT and DALL-E (optional)
OPENAI_API_KEY=""

# Google AI - Imagen 4 and Veo 3.1
# Get API key from: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=""
GOOGLE_IMAGE_MODEL="imagen-4.0-generate-preview-05-20"  # or imagen-4-fast, imagen-4-ultra
GOOGLE_VIDEO_MODEL="veo-3.0-generate-preview"           # or veo-3.1-generate-preview

# ===========================================
# AI Providers - Local (for self-hosted inference)
# ===========================================
# ComfyUI - Local image/video generation with your GPU
# Install: https://github.com/comfyanonymous/ComfyUI
COMFYUI_URL="http://127.0.0.1:8188"
COMFYUI_OUTPUT_URL="http://127.0.0.1:8188/view"
COMFYUI_DEFAULT_MODEL="sd_xl_base_1.0.safetensors"
COMFYUI_FLUX_MODEL="flux1-schnell.safetensors"
COMFYUI_SDXL_MODEL="sd_xl_base_1.0.safetensors"
COMFYUI_SVD_MODEL="svd_xt.safetensors"

# Ollama - Local LLM for prompt enhancement
# Install: https://ollama.ai
OLLAMA_URL="http://127.0.0.1:11434"
OLLAMA_MODEL="llama3.2"
OLLAMA_VISION_MODEL="llava"

# ===========================================
# Storage (S3-compatible)
# ===========================================
# AWS S3
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET="krya-uploads"

# OR Cloudflare R2 (S3-compatible)
CLOUDFLARE_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="krya-uploads"
R2_PUBLIC_URL=""

# ===========================================
# Payments (Stripe)
# ===========================================
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Stripe Price IDs (create these in Stripe dashboard)
STRIPE_BASIC_PRICE_ID=""
STRIPE_PRO_PRICE_ID=""
STRIPE_MAX_PRICE_ID=""
STRIPE_CREDITS_100_PRICE_ID=""
STRIPE_CREDITS_500_PRICE_ID=""
STRIPE_CREDITS_1000_PRICE_ID=""

# ===========================================
# Application Settings
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_REALTIME_HOST="localhost:3001"

# Admin emails (comma-separated)
ADMIN_EMAILS="admin@krya.ai"

# ===========================================
# Monitoring & Analytics (optional)
# ===========================================
# Sentry - Error tracking
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""  # For source map uploads

# PostHog - Product analytics
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# ===========================================
# Logging
# ===========================================
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL="info"

# ===========================================
# Development
# ===========================================
# Set to 'development' for local, 'production' for deployment
NODE_ENV="development"
