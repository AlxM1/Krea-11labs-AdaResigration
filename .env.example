# ===========================================
# KRYA - AI Creative Platform Configuration
# ===========================================

# Database
DB_HOST="postgres"
DB_PORT="5432"
DB_USER="krya"
DB_PASSWORD="your-db-password"
DB_NAME="krya"

# Redis (DB 1 â€” isolated from other services)
REDIS_HOST="redis"
REDIS_PORT="6379"
REDIS_PASSWORD="your-redis-password"
REDIS_DB="1"

# ===========================================
# Storage (Local Filesystem)
# ===========================================
# Directory for uploaded/generated files (bind-mounted in Docker)
UPLOAD_DIR="/app/uploads"

# ===========================================
# Cloud AI Providers (Optional - at least one recommended)
# ===========================================
# All cloud AI providers are optional. Configure at least one for production use.
# The app will automatically fall back through available providers.
# If no providers are configured, users will see a setup prompt.

# fal.ai - Fast image/video generation (Primary recommendation)
# Get free API key: https://fal.ai/dashboard/keys
FAL_KEY=""

# Replicate - Model hosting platform (Good fallback)
# Get API key: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=""
REPLICATE_USERNAME=""  # For model training destination

# Together AI - Open source models (Free tier available)
# Get API key: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=""

# OpenAI - GPT and DALL-E (optional)
# Get API key: https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# Google AI - Imagen 4 and Veo 3.1
# Get API key: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=""
GOOGLE_IMAGE_MODEL="imagen-4.0-generate-preview-05-20"  # or imagen-4-fast, imagen-4-ultra
GOOGLE_VIDEO_MODEL="veo-3.0-generate-preview"           # or veo-3.1-generate-preview

# NVIDIA NIM - Kimi K2.5 LLM and other models (Free tier)
# Get API key: https://build.nvidia.com/
NVIDIA_API_KEY=""

# HuggingFace - Free inference API (Fallback)
# Get token: https://huggingface.co/settings/tokens
HF_TOKEN=""

# Stability AI - Stable Diffusion models
# Get API key: https://platform.stability.ai/account/keys
STABILITY_API_KEY=""

# ===========================================
# Local GPU Server (Optional - for self-hosted inference)
# ===========================================
# ComfyUI - Local image/video generation with your GPU
# Install: https://github.com/comfyanonymous/ComfyUI
# Leave blank to skip local GPU inference
GPU_SERVER_HOST=""  # e.g., "192.168.1.100" or "gpu-server.local"
GPU_SERVER_PORT="8188"
COMFYUI_URL=""  # Alternative: full URL like "http://192.168.1.100:8188"
COMFYUI_OUTPUT_URL=""  # e.g., "http://192.168.1.100:8188/view"
COMFYUI_DEFAULT_MODEL="sd_xl_base_1.0.safetensors"
COMFYUI_FLUX_MODEL="flux1-schnell.safetensors"
COMFYUI_SDXL_MODEL="sd_xl_base_1.0.safetensors"
COMFYUI_SVD_MODEL="svd_xt.safetensors"

# Ollama - Local LLM for prompt enhancement
# Install: https://ollama.ai
# Leave blank to use only cloud LLMs (NVIDIA NIM, Together AI)
OLLAMA_URL=""  # e.g., "http://127.0.0.1:11434"
OLLAMA_MODEL="llama3.1:8b"
OLLAMA_VISION_MODEL="llava"

# ===========================================
# Payments (Stripe - optional)
# ===========================================
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Stripe Price IDs (create these in Stripe dashboard)
STRIPE_BASIC_PRICE_ID=""
STRIPE_PRO_PRICE_ID=""
STRIPE_MAX_PRICE_ID=""
STRIPE_CREDITS_100_PRICE_ID=""
STRIPE_CREDITS_500_PRICE_ID=""
STRIPE_CREDITS_1000_PRICE_ID=""

# ===========================================
# Service-to-Service Integration (Optional)
# ===========================================
# VoiceForge - AI voice generation for video narration
# Internal Docker network: http://raiser-voiceforge:8100
VOICEFORGE_URL=""
VOICEFORGE_API_KEY=""  # If required for internal auth

# WhisperFlow - Voice-to-text transcription
# Internal Docker network: http://raiser-whisperflow:8766
WHISPERFLOW_URL=""

# Newsletter Pipeline - Internal API for generation requests
# Internal Docker network: http://raiser-newsletter-pipeline:8300
NEWSLETTER_PIPELINE_URL=""
INTERNAL_API_KEY=""  # Shared secret for service-to-service auth

# AgentSmith - Workflow automation webhooks
# Internal Docker network: http://raiser-agentsmith-backend:4000
AGENTSMITH_URL=""
WEBHOOK_SECRET=""  # Shared secret for webhook authentication

# ===========================================
# Application Settings
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3100"
NEXT_PUBLIC_REALTIME_WS_URL="http://localhost:3100"
WS_PORT=3001

# Admin emails (comma-separated)
ADMIN_EMAILS="admin@krya.ai"

# ===========================================
# Monitoring & Analytics (optional)
# ===========================================
# Sentry - Error tracking
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""  # For source map uploads

# PostHog - Product analytics
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# ===========================================
# Logging
# ===========================================
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL="info"

# ===========================================
# Development
# ===========================================
# Set to 'development' for local, 'production' for deployment
NODE_ENV="development"
