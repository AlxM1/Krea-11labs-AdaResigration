# Template for Kubernetes secrets
# Copy to secrets.yaml and fill in values
# DO NOT commit secrets.yaml to version control!

apiVersion: v1
kind: Secret
metadata:
  name: voiceforge-secrets
  namespace: voiceforge
type: Opaque
stringData:
  # Database
  database-url: "postgresql+asyncpg://user:password@postgres:5432/voiceforge"

  # Redis
  redis-url: "redis://:password@redis:6379/0"

  # Application Secret
  secret-key: "your-super-secret-key-at-least-32-chars"

  # Stripe
  stripe-secret-key: "sk_live_..."
  stripe-webhook-secret: "whsec_..."

  # AWS S3
  aws-access-key: "AKIA..."
  aws-secret-key: "..."

  # Sentry
  sentry-dsn: "https://...@sentry.io/..."

  # Hugging Face (for model downloads)
  hf-token: "hf_..."

  # OpenAI (for conversational AI)
  openai-api-key: "sk-..."
